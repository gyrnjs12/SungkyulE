<!-- views/users/new.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h3 class="contentBoxTop mb-3">회원 가입</h3>
      <script language="javascript">
        function checkIt()
        {
          var form = document.write_form; 
          if (form.user_file.value==""){
            alert ("학생증 사진을 선택해주세요.");
            form.user_file.focus();
            return false;
          } 
          return true;
        }
        </script>
      <form action="/users" method="post" enctype="multipart/form-data" name="write_form" onsubmit="return checkIt()">
        <div class="form-group row">
          <label for="stdid" class="col-sm-3 col-form-label">학번</label>
          <div class="col-sm-9">
            <input type="text" id="stdid" placeholder="자신의 학번을 입력해주세요" name="stdid" value="<%= user.stdid %>" class="form-control <%= (errors.stdid)?'is-invalid':'' %>"> 
            <% if(errors.stdid){ %> <!-- 3 -->
              <span class="invalid-feedback"><%= errors.stdid.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row">
          <label for="password" class="col-sm-3 col-form-label">비밀번호</label>
          <div class="col-sm-9">
            <input type="password" placeholder="숫자+영문자+특수문자 조합으로 8자리 이상 사용해야 합니다." id="password" name="password" value="" class="form-control <%= (errors.password)?'is-invalid':'' %>"> 
            <% if(errors.password){ %>
              <span class="invalid-feedback"><%= errors.password.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row">
          <label for="passwordConfirmation" class="col-sm-3 col-form-label">비밀번호 확인</label>
          <div class="col-sm-9 col-sm-offset-3">
            <input type="password" placeholder="비밀번호를 확인해주세요" id="passwordConfirmation" name="passwordConfirmation" value="" class="form-control <%= (errors.passwordConfirmation)?'is-invalid':'' %>"> 
            <% if(errors.passwordConfirmation){ %> 
              <span class="invalid-feedback"><%= errors.passwordConfirmation.message %></span>
            <% } %>
            
          </div>
        </div>
        <input type="file" name="user_file" id="user_file">
        <% if(errors.unhandled){ %> 
          <div class="alert alert-danger">
            <%= errors.unhandled %>
          </div>
        <% } %>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">가입하기</button>
        </div>
      </form>

    </div>
  </body>
</html>