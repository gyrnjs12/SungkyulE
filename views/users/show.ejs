<!-- views/users/show.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <div class="container mb-3">
      <h3 class="contentBoxTop">반갑습니다!! <%= user.stdid %>님</h3>
      <br>
    <table class="board-table table table-sm border-bottom"style="background-color: #ffffff;">

        <thead style="background-color: #e3f2fd;" >
          <tr>
            <th scope="col">내가 쓴 글</th>
            <th scope="col" class="date">날짜</th>
          </tr>
        </thead>
        <tbody>
            <% if(posts == null || posts.length == 0){ %>
              <tr>
                <td colspan=2> 게시물이 없어요 :( </td>
              </tr>
            <% } %>
            <% posts.forEach(function(post) { %>
              <tr>
                <td>
                  <a href="/posts/<%= post.boardNum %>/<%= post._id %>" style="color: #000000;"><div class="ellipsis"><%= post.title %></div></a>
                </td>
                <td class="date">
                    <span data-date="<%= post.createdAt %>"></span>
                </td>
            <% }) %>
            </tbody>
      </table>
    </div>
</body>
</html>